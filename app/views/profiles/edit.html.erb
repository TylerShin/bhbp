<div class="container">
  <%= simple_form_for(@profile) do |f| %>
    <%= f.input :username %>
    <%= f.input :nation, as: :select, collection: [:한국, :중국],
      prompt: "국적을 선택하세요.", html: { class: "form-control" } %>
    <%= f.input :region %>
    <%= f.input :interest %>
    <%= f.input :intro %>
    <%= f.input :userimage %>
    <%= f.button :submit %>
  <% end %>
</div>
