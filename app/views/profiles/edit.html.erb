<div class="container">
  <%= simple_form_for(@profile, url: profiles_path, method: 'POST') do |f| %>
      <%= f.input :username %>
      <%= f.input :nation, as: :select, collection: [:한국, :중국],
                  prompt: "국적을 선택하세요.", html: {class: "form-control"} %>
      <%= f.input :gender, as: :select, collection: [:남성, :여성],
                  prompt: "성별을 선택하세요.", html: {class: "form-control"} %>
      <%= f.input :region %>
      <%= f.input :age, as: :select, collection: 1..100, prompt: "나이를 선택하세요.", html: {class: "form-control"} %>
      <%= f.input :interest %>
      <%= f.input :intro %>
      <%= f.input :userimage %>
      <%= f.button :submit %>
  <% end %>
</div>
