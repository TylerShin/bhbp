<div class="container">
  <%= simple_form_for @post do |f| %>
    <%= f.input :table, as: :select, collection: [['자유게시판', :free], ['질문게시판', :question], ['정보게시판', :info], ['자기소개', :intro]], prompt: "게시판을 선택하세요.", html: {class: "form-control"} %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
