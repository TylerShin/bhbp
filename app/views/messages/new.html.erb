<div class="container">
  <div class="message-box">
    <div class="title">
      <h1>쪽지 보내기(发送信息)</h1>
    </div>
  <%= simple_form_for @message do |f| %>
      <%= f.error_notification %>
        <%= f.input :message, as: :text %>
      <%= f.hidden_field :receiver_id, value: params[:id] %>
      <br/>
      <%= f.button :submit, '메시지 보내기', class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent' %>
  <% end %>
  </div>
</div>
